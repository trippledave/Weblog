@model List<Weblog.Web.Models.Weblog.CategoryListItemModel>
@if (Model.Count > 0)
{
    <table>
        <tr>
            <th class="first">ID</th>
            <th>Name</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
            </tr>
        }
    </table>
}