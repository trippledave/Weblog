@model Weblog.Web.Models.Weblog.AddEntryModel
@{
    ViewBag.Title = "Eintrag hinzufügen";
}

<h2>Eintrag hinzufügen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="row">
        <div class="labels">@Html.LabelFor(m => m.Header)</div>
        <div class="controls">@Html.TextBoxFor(m => m.Header)</div>
    </div>
    <div class="row">
        <div class="labels">@Html.LabelFor(m => m.Body)</div>
        <div class="controls">@Html.TextAreaFor(m => m.Body)</div>
    </div>
    <div class="row categoryRow">

        @if (Model.CategoriesList.Count > 0)
        {
            for (int i = 0; i < Model.CategoriesList.Count; i++)
            {
                <span>
                    @Html.CheckBoxFor(model => model.CategoriesList[i].isElementsCategory)
                    @Html.LabelFor(model => model.CategoriesList[i].isElementsCategory, Model.CategoriesList[i].Name)
                    @Html.HiddenFor(m => m.CategoriesList[i].Name)
                    @Html.HiddenFor(m => m.CategoriesList[i].ID)
                </span>
            }
        }
    </div>
    <div class="row">
        <div class="labels">&nbsp;</div>
        <div class="controls"><button>Speichern</button></div>
    </div>

}

@Html.Action("DisplayEntries")

