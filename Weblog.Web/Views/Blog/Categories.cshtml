@using Weblog.Web.Models.Weblog
@model List<CategoryModel>

@if (Model.Count > 0)
{
    <ol class="list-unstyled">
        @foreach (CategoryModel item in Model)
        {
            <li>
               @Ajax.ActionLink(item.Name, "DisplayEntriesByCategory", new { categoryID = item.ID }, new AjaxOptions
           {
               UpdateTargetId = "displayEntries",
               InsertionMode = InsertionMode.Replace,
               HttpMethod = "GET",
               OnSuccess = "SiteHelpers.newPagination()"
           }, new { })
                   
            </li>
        }
    </ol>
}
