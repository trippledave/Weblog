@{
    ViewBag.Title = @Html.Action("Sitename", "View");
}

<div class="blog-header">
    <h1 class="blog-title">@Html.Action("Sitename", "View")</h1>
</div>
<div class="row">
    <div class="col-sm-8 blog-main">
        <div id="displayEntries">
            @Html.Action("DisplayEntries")
        </div>
    </div>
    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
        <div class="sidebar-module sidebar-module-inset">
            @Html.Action("About")
        </div>
        <div class="sidebar-module">
            @Html.Action("Categories", "Blog")
        </div>
        <div class="sidebar-module">
            @Html.Action("Dates", "Blog")
        </div>
    </div>
</div>
