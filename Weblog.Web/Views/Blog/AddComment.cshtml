@model Weblog.Web.Models.Weblog.AddCommentModel

<h3>Kommentar hinzufügen</h3>

@using (Html.BeginForm("AddComment", "Blog", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.EntryID)
    
    <div class="form">
        @Html.ValidationSummary()
        <div class="row form-group">
            @Html.LabelFor(m => m.Text, new { @class = "control-label col-sm-3" })
            @Html.TextBoxFor(m => m.Text, new { @class = "form-control" })
        </div>
        <div class="row">
            <button class="btn btn-primary">Speichern</button>
        </div>
    </div>
}
