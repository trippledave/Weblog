@model Weblog.Web.Models.Account.EnterNewPasswordModel

@{
    ViewBag.Title = "Neues Passwort eingeben";
}

<div class="blog-header">
    <h2>Neues Passwort eingeben</h2>
</div>
<p>Wenn sie eine gültige Email eingetippt haben, sollten eine Passwort-Vergessen-Mail erhalten. In dieser steht ein Token, den sie innerhalb von 24 Stunden im Token-Feld eingeben müssen.</p>

@using (Html.BeginForm("EnterNewPassword", "Account", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form">
        <div class="row form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.Token, new { @class = "control-label col-sm-3" })
            @Html.TextBoxFor(m => m.Token, new { @class = "form-control" })
        </div>
        <div class="row">
            <button class="btn btn-primary">Speichern</button>
        </div>
    </div>
}