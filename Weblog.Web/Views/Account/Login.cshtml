@model Weblog.Web.Models.Account.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{

    <div class="center-box">
        <div class="title">
            <h2>Login</h2>
        </div>

        @Html.ValidationSummary()
        @Html.AntiForgeryToken()

        <div class="row form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-3" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="row">
            <div class="controls">@Html.CheckBoxFor(m => m.RememberMe)&nbsp;@Html.LabelFor(m => m.RememberMe)</div>
        </div>
        <div class="row">
            <button class="btn btn-primary">Login</button>
        </div>
        <br />
        <div class="row">
            @Html.ActionLink("Passwort vergessen?", "ForgotPassword")
        </div>
    </div>
}

