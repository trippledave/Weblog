@model Weblog.Web.Areas.Management.Models.UserPasswordModel

@{
    ViewBag.Title = "Passwort ändern";
}
<div class="blog-header">
    <h2>Passwort ändern</h2>
</div>


@using (Html.BeginForm("ChangeUserPassword", "Management", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form">
        <div class="row form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-sm-3" })
            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
        </div>
        <div class="row">
            <button class="btn btn-primary">Speichern</button>
        </div>
    </div>
}
<br>
